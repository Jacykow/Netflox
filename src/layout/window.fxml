         <VBox alignment="TOP_CENTER">
            <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
            <Button fx:id="startSimButton" mnemonicParsing="false" onAction="#startSim" text="Start"/>
