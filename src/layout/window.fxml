         <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0">
            <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
            <Clock fx:id="simDurationClock"/>
         </VBox>
      </SplitPane>
   </Tab>
</TabPane>
